section .data
    ; --- Protocol Data ---
    COMMAND_TED1  dd 0x31444554  ; 'TED1' command identifier (Little-Endian)
    PAYLOAD_DATA  db "Hello from Teddy Server!", 0  ; The message payload
    PAYLOAD_LEN   dd 0x00000019  ; Length of the message (25 bytes)

    ; Calculate total packet size for the syscall
    PACKET_SIZE   equ 4 + 4 + ($ - PAYLOAD_DATA) ; 4 (Cmd) + 4 (Len) + 25 (Data) = 33

    ; Buffer to hold the combined packet before sending
    ; We need to manually combine the Command, Length, and Payload.
    
section .bss
    PACKET_BUFFER resb PACKET_SIZE  ; 33 bytes for the full packet
