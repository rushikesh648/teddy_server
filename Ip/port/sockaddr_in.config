section .data
    ; --- Network Constants (from C headers) ---
    AF_INET     equ 2   ; Address Family: IPv4
    SOCK_STREAM equ 1   ; Socket Type: TCP
    
    ; --- Server Address Structure (sockaddr_in) ---
    ; Port 8080 (0x1F90) in Network Byte Order (Big-Endian) is 0x901F
    server_addr:
        dw AF_INET      ; sa_family (2 bytes)
        dw 0x901F       ; sin_port (2 bytes - Port 8080)
        dd 0            ; sin_addr (4 bytes - 0.0.0.0 for all interfaces)
        dq 0            ; Padding/unused (8 bytes)
    addr_len equ 16     ; Total size of sockaddr_in structure
    
    ; --- Status Messages ---
    listen_msg db "Teddy Server listening on 0.0.0.0:8080...", 0xa
    listen_len equ $ - listen_msg
