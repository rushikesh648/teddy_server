section .data
    ; TCP Address Structure (sockaddr_in) - 16 bytes
    ; sa_family (AF_INET = 2)
    ; sin_port (Port 8080 = 0x1F90 -> stored as 0x901F in little-endian)
    ; sin_addr (0.0.0.0 = 0)
    server_addr:
        dw 2          ; AF_INET (2)
        dw 0x901F     ; Port 8080 (in network byte order)
        dd 0          ; IP Address 0.0.0.0
        dq 0          ; Padding/unused (8 bytes)

    addr_len equ 16   ; Size of the server_addr structure

    ; Message for a successful startup
    msg db "Teddy Server is listening on port 8080...", 0xa
    msg_len equ $ - msg
