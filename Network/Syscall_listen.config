; ==================================
    ; Syscall: listen() (Syscall #50)
    ; listen(fd, backlog_size)
    ; ==================================
    mov rax, 50         ; Syscall number for listen
    mov rdi, r12        ; Arg 1: Socket FD
    mov rsi, 10         ; Arg 2: Backlog size (max pending connections)
    mov rdx, 0          ; (unused)
    syscall
    
    ; The return value in RAX must be checked for successful network readiness.
    cmp rax, 0
    jl listen_error     ; Jump if the call returned a negative error code

    ; The server is now ready and accessible for connections!
